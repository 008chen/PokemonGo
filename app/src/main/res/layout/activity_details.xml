<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="pokemonListModel"
            type="com.hi.dhl.pokemon.model.PokemonListModel" />

        <variable
            name="viewModel"
            type="com.hi.dhl.pokemon.ui.detail.DetailViewModel" />

    </data>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:bindLoading="@{viewModel.mLoading}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightTeal"
            tools:context=".ui.main.MainActivity">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:padding="@dimen/space_3dp"
                android:src="@drawable/ic_arrow"
                app:finish="@{true}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avator"
                android:layout_width="@dimen/details_img_w_h"
                android:layout_height="@dimen/details_img_w_h"
                android:layout_marginTop="@dimen/margin_20dp"
                android:src="@drawable/poke001"
                android:translationZ="100dp"
                app:bindingAvator="@{pokemonListModel.url}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pokemonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:text="@{pokemonListModel.name}"
                android:textColor="@android:color/black"
                android:textSize="36sp"
                android:textStyle="bold"
                android:translationZ="100dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/avator"
                tools:text="pokemon" />

            <com.hi.dhl.jcustomvie.JProgressView
                android:id="@+id/progressHp"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginStart="@dimen/margin_30dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_30dp"
                android:translationZ="100dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pokemonName"
                app:maxProgressValue="@{viewModel.pokemon.maxHp}"
                app:progressValue="@{viewModel.pokemon.hp}"
                app:progress_animate_duration="@integer/progress_animate_duration"
                app:progress_color="@color/color_progress_1"
                app:progress_color_background="@color/color_progress_bg"
                app:progress_paint_bg_width="@dimen/circle_stroke_width"
                app:progress_paint_value_width="@dimen/circle_stroke_width"
                app:progress_text_color="@android:color/black"
                app:progress_text_size="@dimen/text_size_12sp"
                app:progress_type="@integer/porgress_tpye_round_rect" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.pokemon.getHpString}"
                android:textColor="@android:color/black"
                android:translationZ="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progressHp"
                tools:text="Weight" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/details_img_m_t"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_10dp"
                app:cardCornerRadius="@dimen/common_radius_8dp"
                app:cardUseCompatPadding="true" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/weight"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:text="@{viewModel.pokemon.getWeightString}"
                android:textSize="21sp"
                android:translationZ="100dp"
                app:layout_constraintEnd_toStartOf="@+id/height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progressHp"
                tools:text="24.0 KG" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/weight_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight"
                android:textColor="@android:color/black"
                android:translationZ="100dp"
                app:layout_constraintEnd_toStartOf="@+id/height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weight"
                tools:text="Weight" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/height"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.pokemon.getHeightString}"
                android:textSize="21sp"
                android:translationZ="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/weight"
                app:layout_constraintTop_toTopOf="@+id/weight"
                tools:text="11 M" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/height_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/height"
                android:textColor="@android:color/black"
                android:translationZ="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/weight"
                app:layout_constraintTop_toBottomOf="@+id/height" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_30dp"
                android:layout_marginTop="@dimen/margin_60dp"
                android:layout_marginEnd="@dimen/margin_30dp"
                android:orientation="vertical"
                android:translationZ="100dp"
                app:layout_constraintTop_toBottomOf="@+id/height_title">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/labelAttack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:text="ATK"
                    android:textColor="@android:color/black" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/labelAttack"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_5dp"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:text="@{viewModel.pokemon.getAttackString}"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="200/1000" />


                <com.hi.dhl.jcustomvie.JProgressView
                    android:id="@+id/porgressAttack"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_below="@+id/labelAttack"
                    android:translationZ="100dp"
                    app:maxProgressValue="@{viewModel.pokemon.maxAttack}"
                    app:progressValue="@{viewModel.pokemon.attack}"
                    app:progress_animate_duration="@integer/progress_animate_duration"
                    app:progress_color="@color/color_progress_2"
                    app:progress_color_background="@color/color_progress_bg"
                    app:progress_paint_bg_width="@dimen/circle_stroke_width"
                    app:progress_paint_value_width="@dimen/circle_stroke_width"
                    app:progress_text_color="@android:color/black"
                    app:progress_text_size="@dimen/text_size_12sp"
                    app:progress_type="@integer/porgress_tpye_round_rect" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/labelAttack"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:layout_marginTop="@dimen/margin_30dp"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:text="SPEED"
                    android:textColor="@android:color/black" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/speed"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_5dp"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:text="@{viewModel.pokemon.getSpeedString}"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="200/1000" />

                <com.hi.dhl.jcustomvie.JProgressView
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_below="@+id/speed"
                    android:translationZ="100dp"
                    app:maxProgressValue="@{viewModel.pokemon.maxSpeed}"
                    app:progressValue="@{viewModel.pokemon.speed}"
                    app:progress_animate_duration="@integer/progress_animate_duration"
                    app:progress_color="@color/color_progress_3"
                    app:progress_color_background="@color/color_progress_bg"
                    app:progress_paint_bg_width="@dimen/circle_stroke_width"
                    app:progress_paint_value_width="@dimen/circle_stroke_width"
                    app:progress_text_color="@android:color/black"
                    app:progress_text_size="@dimen/text_size_12sp"
                    app:progress_type="@integer/porgress_tpye_round_rect" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/exp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/speed"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:layout_marginTop="@dimen/margin_40dp"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:text="EXP"
                    android:textColor="@android:color/black" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/exp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_5dp"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:text="@{viewModel.pokemon.getExpString}"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="200/1000" />

                <com.hi.dhl.jcustomvie.JProgressView
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_below="@+id/exp"
                    android:translationZ="100dp"
                    app:maxProgressValue="@{viewModel.pokemon.maxExp}"
                    app:progressValue="@{viewModel.pokemon.exp}"
                    app:progress_animate_duration="@integer/progress_animate_duration"
                    app:progress_color="@color/color_progress_4"
                    app:progress_color_background="@color/color_progress_bg"
                    app:progress_paint_bg_width="@dimen/circle_stroke_width"
                    app:progress_paint_value_width="@dimen/circle_stroke_width"
                    app:progress_text_color="@android:color/black"
                    app:progress_text_size="@dimen/text_size_12sp"
                    app:progress_type="@integer/porgress_tpye_round_rect" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>
